                    <span>Available stock: {{catalog.product_stock}}</span>
                </div>
                {{!-- <form action="/cart/add/{{catalog.product_id}}" class="d-flex"> --}}
                <form action="/cart/add" method="post" class="d-flex" >
                    <div class="form-group">
                        <input id="product_id" name="quantity" class="form-control text-center me-4"  type="number" value="1" placeholder="1" style="max-width: 8rem">
                    </div>
                    <div class="form-group">
                        <input type="hidden" value="{{catalog.product_id}}" id="product_id" name="product_id">
                        <input type="hidden" value="{{catalog.product_name}}" id="product_name" name="product_name">
                        <input type="hidden" value="{{catalog.product_price}}" id="product_price" name="product_price">
                        <input type="hidden" value="{{catalog.product_imageURL}}" id="product_imageURL" name="product_imageURL">
                        <input type="hidden" value="{{catalog.product_URL}}" id="product_URL" name="product_URL">
                        
                    </div>
                    <button class="form-control btn btn-outline-dark " type="submit">
                        <i class="bi-cart-fill me-1"></i>
                        Add to cart
                    </button>
                </form>
            </div>
        </div>
    </div>

