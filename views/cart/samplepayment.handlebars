<h1 class="display-4" style="text-align: center;">Checkout</h1>
<h4 style="text-align: center;">Total: $14.00</h4>
    <div style="width:50%;margin-left:auto;margin-right:auto;">
        <form action="/sampleconfirm" id="samplepayment">
            <div class="form-group">
                <label for="cardno">Card Information</label>
                <input type="number" id='cardno' name='cardno' class='form-control' placeholder="1234 1234 1234 1234">
                <div class="row">
                    <div class="col">
                        <input type="text" id="expmonth" class='form-control' placeholder="MM">
                    </div>
                    <div class="col">
                        <input type="number" id="expyear" class="form-control" placeholder="YY">
                    </div>
                </div>
                <input type="number" id='cvc' name='cvc' class='form-control' placeholder="CVC">
                <label for="name">Name on Card:</label>
                <input type="text" id="name" name="fullname" class="form-control">

            </div><br>
            <div class="container text-center" style="width:90%;margin:auto;padding:20px;align-content: center;">
                <button class="btn btn-primary" type="submit">Pay</button>
            </div>
        </form>

    </div>